{{define "scripts"}}
<script>
	{{template "jquery"}}
	
	function init() {
  $(".hidden").hide();
  $(".show").click(function() {
    $(this).hide().next().show().next().show()
  });
  $(".hide").click(function() {
    $(this).hide().prev().show();
    $(this).next().hide()
  });
}

$(document).ready(function() {
  init();
});
</script>
{{end}}

